//

function CheckForRegardless takes unit u, unittype checkType, integer wantType returns boolean

  local boolean bool = false
  
  if IsUnitType(u, checkType) and wantType == 0 then
    set bool = false
  elseif (IsUnitType(u, checkType) and wantType == 1) or wantType == 2 then
    set bool = true
  endif
  
  return bool
  
endfunction
/*  ( P v Q)
doesnt work:
  ~ (~P ^ Q)
  ~ ( P ^ Q)
    (~P ^ Q)
    (~P v Q)
*/
