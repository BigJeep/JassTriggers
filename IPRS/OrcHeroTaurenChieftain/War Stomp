  local real caster_y = GetUnitY(caster)
  local real angle = GetUnitFacing(caster)
  local real distance = 200
  
  local real target_x = 
  local real target_y = 
    
  local unit temp = CreateUnit(p, 'h001', target_x, target_y, 0)
  call AddUnitAbility (temp, 'War Stomp')
  call ApplyTimedLife (temp, 'BTLF', 4.)
  
  loop
    exitwhen count == 0
    call IssueImmediateOrder(temp, 'warstomp')
    
    set target_x = 
    set target_y = 
    
    call SetUnitPosition(temp, target_x, target_y,)
    
    set count = count + 1
    
  endloop
  
  set caster = null
  set temp = null
  set p = null
  
  return nothing
endfunction

